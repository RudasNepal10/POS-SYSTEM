@model IEnumerable<infrastructurre.Entities.CategoryATT>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5 class="font-bold">CATEGORY</h5>
                <a href="/Category/Create" class="btn btn-w-m btn-outline-primary m-l m-b-xs"><i class="fa fa-plus"></i> Add New</a>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover tbl-datatable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>CategoryName</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sn = 1;
                                foreach (var data in Model)
                                {
                                    <tr class="gradeX">
                                        <td>
                                            @sn
                                            <input type="hidden" class="id" value="@data.Id" />
                                        </td>
                                        <td class="center">@data.Categoryname</td>
                                        <th>
                                            <a href="/Category/Update?id=@data.Id" class="btn btn-outline-primary">
                                                Edit
                                            </a>
                                            <a href="/Category/Delete?id=@data.Id" class="btn btn-outline-primary"> Delete</a>
                                        </th>
                                    </tr>
                                    sn++;
                                }
                            }

                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

