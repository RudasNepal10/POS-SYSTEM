@model infrastructurre.DTO.CategoryDTO
<!DOCTYPE html>
<html lang="en">

<head>

</head>

<body>
    <div class="Category">
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                        <div class="ibox-title">
                            <a href="/Category/List" class="btn btn-w-m btn-outline-primary m-l m-b-xs"><i class="fa fa-plus"></i> Back to list</a>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                            </div>
                            <h1 class="card-title font-bold">Add Category</h1>
                        </div>
                        <div class="ibox-content">
                        @using (Html.BeginForm(FormMethod.Post, new { @Class = "row g-3" }))
                        {
                            <div class="col-md-4">
                                <label for="inputText" class="form-label">Category Name</label>
                                @Html.TextBoxFor(a => a.Categoryname, new { type = "text", placeholder = "Name", @Class = "form-control", required = "required" })
                                <div class="invalid-feedback">
                                    @Html.ValidationMessageFor(a => a.Categoryname, null, new { @Class = "text-danger" })
                                </div>

                            </div>


                            <div class="col-15">
                                <button class="btn btn-primary" type="submit">Add</button>
                            </div>

                        }

                        </div>

                </div>
            </div>
        </div>
    </section>


    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

</body>

</html>