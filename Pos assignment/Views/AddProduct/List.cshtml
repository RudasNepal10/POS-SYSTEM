@model IEnumerable<infrastructurre.Entities.AddProductATT>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>PRODUCTS</h5>
                    <a href="/AddProduct/Create" class="btn btn-w-m btn-outline-primary m-l m-b-xs"><i class="fa fa-plus"></i> Add New</a>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover tbl-datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>ProductName</th>
                                    <th>Price</th>
                                    <th>quantity</th>
                                    <th>Product Image</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int sn = 1;
                                    foreach (var data in Model)
                                    {
                                        <tr class="gradeX">
                                            <td>
                                                @sn
                                                <input type="hidden" class="id" value="@data.Id" />
                                            </td>

                                            <td class="center">@data.Productname</td>
                                            <td class="center">@data.Price</td>
                                            <td class="center">@data.Quantity</td>
                                            <td class="center"> <img class="image-preview images manualimgsize img-thumbnail" width="60%" src="~/Product/@data.ImageFile" alt="Photo" style="width:100px;"></td>
                                            <th>
                                                <a href="/AddProduct/Update?id=@data.Id" class="btn btn-outline-primary">
                                                    Edit
                                                </a>
                                                <a href="/AddProduct/Delete?id=@data.Id" class="btn btn-outline-primary"> Delete</a>
                                            </th>
                                        </tr>
                                        sn++;
                                    }
                                }

                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>