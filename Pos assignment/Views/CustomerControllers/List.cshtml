@model IEnumerable<infrastructurre.Entities.CustomerATT>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>customer</h5>
                    <a href="/CustomerControllers/Create" class="btn btn-w-m btn-outline-primary m-l m-b-xs"><i class="fa fa-plus"></i> Add New</a>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover tbl-datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>CustomerName</th>
                                    <th>PhoneNumber</th>
                                    <th>Address</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int sn = 1;
                                    foreach (var data in Model)
                                    {
                                        <tr class="gradeX">
                                            <td>
                                                @sn
                                                <input type="hidden" class="id" value="@data.Id" />
                                            </td>
                                            <td class="center">@data.CustomerName</td>
                                            <td class="center">@data.CustomerPhone</td>
                                            <td class="center">@data.Address</td>
                                            <td class="center">@data.CustomerEmail</td>
                                            <th>
                                                <a href="/CustomerControllers/Update?id=@data.Id" class="btn btn-outline-primary">
                                                    Edit
                                                </a>
                                                <a href="/CustomerControllers/Delete?id=@data.Id" class="btn btn-outline-primary"> Delete</a>
                                            </th>
                                        </tr>
                                        sn++;
                                    }
                                }

                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>